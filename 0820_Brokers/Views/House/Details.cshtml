@model _0820_Brokers.Models.HouseModel

@{
    ViewData["Title"] = "Details";
}

<h1>Appartment Details</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Id
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FlatId)
        </dd>
        <dt class = "col-sm-2">
            City
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.City)
        </dd>
        <dt class = "col-sm-2">
            Address
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullAddress)
        </dd>
        <dt class = "col-sm-2">
            Floor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FlatFloor) / @Html.DisplayFor(model => model.BuildingFloors)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Area)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Area) m<sup>2</sup>
        </dd>
        <dt class = "col-sm-2">
            Company
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CompanyName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Broker)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Broker)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "DisplayEditAppartment", new { houseId = @Model.FlatId }) |
    <a asp-action="Index">Back to List</a>
</div>
