@model BrokerHousesModel

@{
    ViewData["Title"] = "Index";
}
<h1>Appartments @Model.BrokerName can manage</h1>

<p>
    @Html.ActionLink("Back To Broker Appartments", "ListBrokerAppartments", new { brokerId = Model.BrokerId })
</p>

<table class="table">
    <thead>
        <tr>
            <th>City</th>
            <th>Address</th>
            <th>Company</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Houses)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                @Html.ActionLink("Choose", "AssignAppartmentToBroker", "Broker", new { houseId = item.FlatId, brokerId = Model.BrokerId })
            </td>
        </tr>
        }
    </tbody>
</table>
