@model CompanyHousesModel

@{
    ViewData["Title"] = "Index";
}
<h1>Appartments of @Model.CompanyName</h1>

<p>
    <a asp-action="Index">Back To List</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>City</th>
            <th>Address</th>
            <th>Area</th>
            <th>Broker</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Houses)
        {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Broker)
            </td>
            <td>
            @Html.ActionLink("Change Broker", "ChangeBroker", new { houseId=item.FlatId })
        </td>
        </tr>
        }
    </tbody>
</table>
